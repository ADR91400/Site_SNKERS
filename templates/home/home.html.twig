{% extends 'public.html.twig' %}

{% block subtitle %}Bienvenue{% endblock %}

{% block heroUnit %}
  <div class="hero-unit">
    <h1 class="title">SNKERS</h1>
    <p class="subtitle">Vente de livres entre particulier</p>
  </div>
{% endblock %}

{% block main %}
<div class="book-list">
  {% for ad in ads %}
    <div class="book-block">
      {% if ad.pictures is not empty %}
        <div class="background-image">
          <img src="{{ ad.pictures[0] }}" alt="{{ ad.style }}" />
        </div>
      {% endif %}
      <p class="title">{{ ad.style }}</p>
      <div class="footer">
        <p class="author">
          Vendu par <br />{{ ad.author.firstname }} {{ ad.author.lastname }}
        </p>
        <p class="price">
          {{ ad.price }} â‚¬
        </p>
      </div>
      <div class="btn-group">
        <a href="{{ path('app_cart_add', {id: ad.id}) }}" class="btn btn-gray">
          <i class="fa-solid fa-cart-arrow-down"></i>
          Ajouter 
        </a>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
